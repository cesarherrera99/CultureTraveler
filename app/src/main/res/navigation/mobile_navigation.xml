<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_map">

    <fragment
        android:id="@+id/navigation_map"
        android:name="com.example.culturetraveler.ui.map.MapFragment"
        android:label="@string/title_map"
        tools:layout="@layout/fragment_map">
        <argument
            android:name="data"
            android:defaultValue="@null"
            app:argType="com.example.culturetraveler.PHC"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_lista"
        android:name="com.example.culturetraveler.ui.lista.ListaFragment"
        android:label="Lista de PHC"
        tools:layout="@layout/fragment_lista_phc">
        <action
            android:id="@+id/action_navigation_lista_to_navigation_map"
            app:destination="@id/navigation_map" />
    </fragment>

    <fragment
        android:id="@+id/navigation_perfil"
        android:name="com.example.culturetraveler.ui.perfil.PerfilFragment"
        android:label="@string/title_perfil"
        tools:layout="@layout/fragment_perfil" />
</navigation>